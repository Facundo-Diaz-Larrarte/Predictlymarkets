# PostgreSQL Database Configuration
POSTGRES_USER=predictly
POSTGRES_PASSWORD=predictly_dev_password
POSTGRES_DB=predictly_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Backend Database URL (construido a partir de las variables anteriores)
# Formato: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://predictly:predictly_dev_password@postgres:5432/predictly_db

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# JWT Secret (CAMBIAR EN PRODUCCIÃ“N)
JWT_SECRET=dev_jwt_secret_change_in_production

# Frontend API URL
# Para desarrollo local desde el navegador apunta a localhost
NEXT_PUBLIC_API_URL=http://localhost:8000

# Fee Rate (opcional, por defecto 1%)
FEE_RATE=0.01
